#FOR MKL
cmake -DOPENSMOKE_USE_MKL=1 -DBLAS_INCLUDE_DIRS=/opt/intel/oneapi/mkl/latest/include -DBLAS_LIBRARIES="/opt/intel/oneapi/mkl/latest/lib/intel64/libmkl_intel_lp64.so;/opt/intel/oneapi/mkl/latest/lib/intel64/libmkl_sequential.so;/opt/intel/oneapi/mkl/latest/lib/intel64/libmkl_core.so" ..


#FOR BLAS
cmake -DOPENSMOKE_USE_OPENBLAS=1 -DOpenBLAS_ROOT=/opt/OpenBLAS ..
